<body>
<div id="app">
  <h2>Today</h2>
  <input id="task" placeholder="Add task">
  <button onclick="addTask()">+</button>
  <ul id="list"></ul>
</div>

<script>
let tasks = JSON.parse(localStorage.getItem("tasks")) || [];

function render(){
  list.innerHTML="";
  tasks.forEach((t,i)=>{
    list.innerHTML += `<li onclick="removeTask(${i})">âœ” ${t}</li>`;
  });
}
function addTask(){
  if(task.value){
    tasks.push(task.value);
    task.value="";
    localStorage.setItem("tasks", JSON.stringify(tasks));
    render();
  }
}
function removeTask(i){
  tasks.splice(i,1);
  localStorage.setItem("tasks", JSON.stringify(tasks));
  render();
}
render();
</script>
</body>
</html>
